@model Fiap02.Web.MVC.Models.AlunoModel

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar Aluno</h2>

<br />

<form action="/Aluno/Cadastrar" method="post">
    <div class="form-group">
        <label for="id-nome">Nome</label>
        <input type="text" name="nome" id="id-nome" placeholder="Digite seu nome"/>
    </div>
    <div class="form-group">
        <label for="id-curso">Curso</label>
        <select name="curso" id="id-curso">
            <option disabled selected>Selecione um curso</option>
            <option value="EC">Engenharia da Computacao</option>
            <option value="EM">Engenharia Mecatronica</option>
            <option value="AS">Analise e Desenvolvimento de Sistemas</option>
            <option value="ADM">Administracao</option>
            <option value="BD">Banco de Dados</option>
        </select>
    </div>
    <div class="form-group">
        <input type="radio" id="id-diurno" name="periodo" value="Diurno" /><label for="id-diurno">Diurno</label>
        <input type="radio" id="id-noturno" name="periodo" value="Noturno" /><label for="id-noturno">Noturno</label>
    </div>
    <div class="form-group">
        <input type="checkbox" name="funcionario" id="id-funcionario" value="true" />
        <label for="id-funcionario">Funcionario</label>
    </div>
    <div class="form-group">
        <label for="id-descricao">Descrição</label>
        <textarea rows="5" cols="30" name="descricao" id="id-descricao"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

<div>

    <div>@TempData["msg"]</div>
    <p>@ViewBag.nome</p>
    <p>@Model.Curso</p>
</div>