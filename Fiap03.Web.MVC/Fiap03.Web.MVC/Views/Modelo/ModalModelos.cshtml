@model IList<Fiap03.Web.MVC.Models.ModeloModel>

<div class="modal fade" id="modalListarModelos">
    <div class="modal-dialog">
        <div class="modal-content" style="padding:15px;">
            <div class="modal-header">
                <h4 class="modal-title">Modelos</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="row" style="padding:15px; justify-content:center;">
                <div class="col-5">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nome</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model)
                            {
                                <tr>
                                    <td>@m.Nome</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-5">
                    @using (Html.BeginForm("Cadastrar", "Modelo"))
                    {
                        <input name="MarcaId" value="@TempData["MarcaId"]" type="hidden" />
                        <br />
                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstOrDefault().Nome)
                            <input type="text" name="Nome" class="form-control" />
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-outline-success">Cadastrar</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
