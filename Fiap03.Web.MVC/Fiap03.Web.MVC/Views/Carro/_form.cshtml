@model Fiap03.Web.MVC.Models.CarroModel

<div class="row">
    <div class="col">
        <h2>Carro</h2>
        <div class="form-group">
            @Html.LabelFor(c => c.MarcaId)
            @Html.DropDownListFor(c => c.MarcaId,
                ViewBag.marcas as SelectList,
                "Selecione",
                new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Combustivel)
            @Html.EnumDropDownListFor(c => c.Combustivel, "Selecione", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Ano)
            @Html.TextBoxFor(c => c.Ano, new { @class = "form-control", placeholder = "Digite o ano" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Esportivo)
            &nbsp;
            &nbsp;
            @Html.CheckBoxFor(c => c.Esportivo)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Placa)
            @Html.TextBoxFor(c => c.Placa, new { placeholder = "Digite a placa", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Descricao)
            @Html.TextAreaFor(c => c.Descricao, new { @class = "form-control" })
        </div>
    </div>
    <div class="col">
        <h2>Documento</h2>
        <div class="form-group">
            @Html.LabelFor(c => c.Documento.Renavam)
            @if (Model == null)
            {
                @Html.TextBoxFor(c => c.Documento.Renavam, new { @class = "form-control", placeholder = "Digite o renavam" })
            }
            else
            {
                @Html.TextBoxFor(c => c.Documento.Renavam, new { @class = "form-control", @readonly = "readonly" })
            }
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Documento.Categoria)
            @Html.EnumDropDownListFor(c => c.Documento.Categoria, "Selecione",
           new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Documento.DataFabricacao)
            @Html.TextBoxFor(c => c.Documento.DataFabricacao, "{0:dd/MM/yyyy}",
            new { @class = "form-control" })
        </div>
    </div>
</div>
